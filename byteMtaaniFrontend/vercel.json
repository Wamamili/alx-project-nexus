{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@vercel/next" }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://alx-project-nexus-bytemtaani-ecommerce.onrender.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=1, stale-while-revalidate" }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE": "https://alx-project-nexus-bytemtaani-ecommerce.onrender.com",
    "NEXT_PUBLIC_USE_API": "true"
  }
}